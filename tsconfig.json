{
    "compilerOptions": {
      "declaration": true,
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "outDir": "./build",
      "baseUrl": "./src",
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "es5",
      "plugins": [
        {
          "name": "typescript-tslint-plugin",
          "ignoreDefinitionFiles": true
        }
      ],
      "typeRoots": [
        "../node_modules/@types"
      ]
    },
    "include": [
      "src"
    ]
  }
  